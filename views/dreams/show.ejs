
<%- include ('../partials/header') %>
<link rel="stylesheet" href="/styles/dreams/show.css">

<body>

<% if(user.id === dream.Dreamer.toString()) { %> 
<div class="dream-box">
    <h3 id="title"><%= dream.dream %> </h3>
    <div id="obstacles-comments">
    <div class="obstacles">
        <h3>Obstacles</h3>
        <ol>
            <li class="obstacle-list"><%= dream.obstacle[0] %></li>
            <li class="obstacle-list"><%= dream.obstacle[1] %></li>
            <li class="obstacle-list"><%= dream.obstacle[2] %></li>
        </ol>
        
    </div>
    <div class="comments">
        <h3>Comments</h3>
        <ul>
            
            <% if(comments.length !== 0) {comments.forEach((comment, idx) => { %>
                <li class="one-comment">
                    <p><span class="name"><%= comment['name'] %><br></span><%= comment['comment'] %></p>
                <% if(comment.Dreamer.toString() === user.id) { %>
                    <div class="comment-buttons">
                        <a href="/comments/<%= comment._id %>/edit"><button class="edit">Edit</button></a>
                        <% } %>
                        <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                            <input type="submit" onclick="confirm('Are you sure you want to delete your comment?')" class="delete" value="Delete" />
                        </form>
                    </div>
                
                
                    </li>
                <% })} else {%>
                    <li> Be the first to support this dream.</li>
                <% }%>
            </ul> 
        </div>
        
        <div class="leave-comment">
            <a href="/comments/<%= dream._id %>/new"><button class="leave-comments">Leave a comment</button></a>
        </div>
    
   
    </div>
    </div>

    <div class="buttons">
        <a  href="/dreams/edit/<%= dream._id %>"><button id="edit-dream">Edit Dream</button></a>
        <form action="/dreams/<%= dream._id %>?_method=DELETE" method="POST">
                <input type="hidden" name="Dreamer" value="<%= dream.Dreamer %>" />
                <input type="submit" onclick="confirm('Are you sure you want to delete your dream? This action cannot be undone.')" id="delete-dream" value="Delete Dream" />
        </form>
        

    </div>
</div>

<% } else if (user) {%> 
    <div class="dream-box">
        <h3 id="title"><%= dream.dream %> </h3>
        <div id="obstacles-comments">
            <div class="obstacles">
                <h3>Obstacles</h3>
                <ol>
                    <li class="obstacle-list"><%= dream.obstacle[0] %></li>
                    <li class="obstacle-list"><%= dream.obstacle[1] %></li>
                    <li class="obstacle-list"><%= dream.obstacle[2] %></li>
                </ol>
            </div>
            <div class="comments">
                <h3>Comments</h3>
                
                    <ul>
                        <% if(comments.length !== 0) {comments.forEach((comment, idx) => { %>
                            <li class="one-comment">
                            <p><span class="name"><%= comment['name'] %></span><br><%= comment['comment'] %></p>
                            <% if(comment.Dreamer.toString() === user.id) { %>
                                <div class="comment-buttons">
                                    <a href="/comments/<%= comment._id %>/edit"><button class="edit">Edit</button></a>
                                    <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <input type="submit"  onclick="confirm('Are you sure you want to delete your comment?')" class="delete" value="Delete" />
                                    </form>
                                </div>
                            </li>
                        <% } %>
                        
                        <% })} else {%>
                            <li> Be the first to support this dream.</li>
                        <% }%>
                </ul>
                
            </div>
            <div class="leave-comment">
                <a href="/comments/<%= dream._id %>/new"><button class="leave-comments">Leave a comment</button></a>
            </div>
            </div>
        </div>
    </div>


<% } else { %>
    <p>You must be <span><a href="/auth/google">logged in</a></span> to view this page.</p>
<% } %> 

</body>
<%- include ('../partials/footer') %>