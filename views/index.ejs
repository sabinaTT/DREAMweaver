<% let publishedDreams = []; %>
<% let usedNumbers = [] %>

<% dreams.forEach(dream => { %>
    <% if (dream.published == "on") { %>
        <% publishedDreams.push(dream) %>
<% }}); %>
<% let randomNumber; %>

<% function dreamPick() { %>
    <%= publishedDreams[randomNumber].dream  %></a>
    <%= publishedDreams[randomNumber].dream[0].slice(0,100)  %></a>
    <% usedNumbers.push(randomNumber)%> 
<% } %>

<% function dreamPicker() { %>
    <% randomNumber = Math.floor(Math.random() * (publishedDreams.length));  %>
    <% !usedNumbers.includes(randomNumber) ? dreamPick() : dreamPicker() } %> 



