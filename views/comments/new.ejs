<%- include ('../partials/header') %>

<% if(user) { %>
  <h1>Create comment</h1>

  <form id="add-comment-form" method="POST" action="/comments/:id/create">
    <input type="hidden" name="Dreamer" value="<%= user.id %>"/>
    <input type="hidden" name="ActiveDream" value="<%= dreamId %>"/>
    <label>Comment:</label>
    <textarea name="comment"></textarea>
    <input type="submit" value="Add comment">
  </form>
<% } else { %> 
  <p>You must be <span><a href="/auth/google">logged in</a></span> to view this page.</p>
<% } %>