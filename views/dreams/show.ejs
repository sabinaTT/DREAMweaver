<h1>Show.ejs</h1>
<h3>Dream</h3>
<p><%= context.dream.dream %> </p>
<h3>Obstacles</h3>
<ol>
    <li><%= context.dream.obstacle[0] %></li>
    <li><%= context.dream.obstacle[1] %></li>
    <li><%= context.dream.obstacle[2] %></li>
</ol>
<h3>Comments</h3>
<ul>
    <% context.dream.Comments.forEach(comment => { %>
        <li>
            <%= comment %>
        </li>
    <% }) %>
</ul>

<a href="/dreams/<%= context.dream._id %>/edit">Edit</a>
<form action="/dreams/<%= context.dream._id %>?_method=DELETE" method="POST">
    <input type="hidden" name="Dreamer" value="<%= context.dream.Dreamer %>" />
    <input type="submit" value="Delete" />
</form>

<a href="/comments/<%= context.dream._id %>/new">Leave a comment</a>
