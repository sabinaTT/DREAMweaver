<%  if(user) { %>
    <h1>Edit your profile here!</h1>
    <form action="/dreamers/<%= dreamer._id %>?_method=PUT" method="POST">
    <input type="text" name="name" <% if (dreamer.name) %> value="<%=dreamer.name%>" placeholder="Name">

    <input type="text" name="email" <%if(dreamer.email) %> value="<%=dreamer.email%>" placeholder="E-mail">

    <input type="text" name="zipCode" <%if(dreamer.zipCode) %> value="<%=dreamer.zipCode%>" placeholder="Zip code for future location services">

    <textarea type="type" name="profile" <%if(dreamer.profile) %> value="<%=dreamer.profile%>" placeholder="Tell us a little about yourself so others can best help you achieve your dreams."></textarea>

    <input type="submit" value="Update profile" />
    </form>
<% } else { %>
