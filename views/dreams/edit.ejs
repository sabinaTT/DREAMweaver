        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/styles/style.css">
        <link rel="stylesheet" href="/styles/dreams/edit.css">
    </head>
    <ul class="box-area">
        <li class="bubble1 bubble"></li>
        <li class="bubble2 bubble"></li>
        <li class="bubble3 bubble"></li>
        <li class="bubble4 bubble"></li>
        <li class="bubble5 bubble"></li>
        <li class="bubble6 bubble"></li> 

<body>
    <div class = "banner-text">
        


    <div class="animation-area">
        <div class="nav">
            <div id="logo">
            </div>
                <ul id="nav">
                    <% if (user) { %>
                        <li><a href="/dreams">Home</a></li>
                        <li><a href="/dreamers/<%= user._id %>">Profile</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/logout">Log Out</a></li>
                    <% } else { %>
                        <li><a href="/auth/google">Login with Google</a></li>
                    <% } %>
                </ul>
        </div>


<% if(user) { %>
<div id="edit-dream">
<h1>Edit Dream</h1>
<div class="form">
    <form action="/dreams/<%= dream._id %>?_method=PUT" method="POST">
        
    <input type="hidden" name="_id" value="<%dream._id%>"/>

    <textarea type="type" maxlength="140" class="dream" name="dream"><%=dream.dream%></textarea>
        <h2>Obstacles</h2>
    <textarea type="type" maxlength="140" class="obstacle" name="obstacle"> <%=dream.obstacle[0]%></textarea>


    <textarea type="type" maxlength="140" class="obstacle" name="obstacle"> <%=dream.obstacle[1]%></textarea>

    <textarea type="type" maxlength="140" class="obstacle" name="obstacle"> <%=dream.obstacle[2]%></textarea>
    
    <h2><label class="checkbox">
    
    <%- dream.published === "on" ? `<input type="hidden" name="published" value=0>` : "" %>
    
    <input type="checkbox" name="published" 
    <%= dream.published === "on" ? "checked" : "" %>
    ><span id="publish-text">Are you comfortable publishing this dream? We recommend it, otherwise others will not be able to support you.</h2></span></label>


    <input type="submit" class="update" value="Update Dream" style="padding-right: 5px" />
    </form>

</div>
</div>
<% } else { %>
    <h1 id="logged-in">You must be logged in to view this page.</h1>

    <div id="dreamweaver-index-title">
        <h1>DREAMWEAVER<div id="subtitle" style="font-size: 40px; color: rgb(211, 209, 209); margin-top: -10px; margin-bottom: 10px; width: 1000px; text-shadow:-2px 0 rgb(107, 11, 91), 0 2px rgb(107, 11, 91), 2px 0 rgb(107, 11, 91), 0 -2px rgb(107, 11, 91);">Crowdsource your dreams</div></h1>
    <div class="buttons" style="margin-left: 40%">
        <h3><a href="/auth/google"><button id="login" style="font-size:20px; height: 45px; width: 110px; margin-left: 115%; padding: 10px 0 20px 0">Login</button></h3></a>
<% } %>
</main>
</div>
</body>


